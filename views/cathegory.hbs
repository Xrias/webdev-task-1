<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="utf-8">
    <title>Ilon Mask</title>
    <link rel="stylesheet" href="/cathegory.css" media="screen">
</head>
{{> header}}

<body>
    <main>
        {{> weather}} {{#each news}}
        <article class="new">
            <a href="{{ url }}" class="new__link">
                <h1 class="new__title">{{ title }}</h1>
            </a>
            <p class="new__content">
                {{#if urlToImage}}
                <img src="{{urlToImage}}" alt="{{title}}" class="new__content__image"> {{/if}}
                <span class="new__content__description">{{description}}</span>
            </p>
            <div class="new__author">
                <span class="new__author__value">{{author}}</span>
            </div>
            <div class="new__publishedAt">
                <span class="new__publishedAt__value">{{publishedAt}}</span>
            </div>
        </article>
        {{/each}}
    </main>
</body>
{{> footer}}

</html>